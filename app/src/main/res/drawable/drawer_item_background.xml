<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <inset
            android:insetLeft="12dp"
            android:insetRight="12dp"
            android:insetTop="6dp"
